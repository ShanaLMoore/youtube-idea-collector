<h1>Edit <%= @idea.name %></h1>

<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>

<form action="/ideas/<%=@idea.id %>" method="POST">
  <label> Idea Name </label>
  <input type="text" name="name" value="<%=@idea.name %>"> </br>

  <label> Idea Content </label>
  <input type="text" name="content" value="<%=@idea.content %>"> </br>

  <input type="submit" value="Edit Idea">
</form>
